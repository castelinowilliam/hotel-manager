<!DOCTYPE html>
<html lang="en">
<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    {{#each orders }}
        <table id="table1">
            <tr>
                <td colspan="2"> Table No.{{ this.tableno }}</td>
            </tr>
            <tr>
                <th>Food items</th>
                <th>Quantity</th>
            </tr>
            <tr>
                <td class="shift">{{ this.start1 }}</td>
                <td>{{ this.qty1 }}</td>
            </tr>
            <tr>
                <td class="shift">{{ this.start2 }}</td>
                <td>{{ this.qty2 }}</td>
            </tr>
            <tr>
                <td class="shift">{{ this.main1 }}</td>
                <td>{{ this.qty3 }}</td>
            </tr>
            <tr>
                <td class="shift">{{ this.main2 }}</td>
                <td>{{ this.qty4 }}</td>
            </tr>
            <tr>
                <td class="shift">{{ this.main3 }}</td>
                <td>{{ this.qty5 }}</td>
            </tr>        
            <tr>
                <td class="shift">{{ this.drink1 }}</td>
                <td>{{ this.qty6 }}</td>
            </tr>    
            <tr>
                <td class="shift">{{ this.drink2 }}</td>
                <td>{{ this.qty7 }}</td>
            </tr>
            <tr>
                <td class="shift">{{ this.des1 }}</td>
                <td>{{ this.qty8 }}</td>
            </tr>
            <tr>
                <td class="shift">{{ this.des2 }}</td>
                <td>{{ this.qty9 }}</td>
            </tr> 
            <tr>
                <td colspan="2"> <a href="/orders/delete/{{ this._id }}" class="btn btn-danger btn-lg"> Delete </a></td>
            </tr>
        </table>
    {{/each}}
</body>
</html>