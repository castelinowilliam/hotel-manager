                <td class="qtyid">{{ this.qty6 }}</td>
            </tr>    
            <tr>
                <td class="shift">{{ this.drink2 }}</td>
                <td class="qtyid">{{ this.qty7 }}</td>
            </tr>
            <tr>
                <td class="shift">{{ this.des1 }}</td>
                <td class="qtyid">{{ this.qty8 }}</td>
            </tr>
            <tr>
                <td class="shift">{{ this.des2 }}</td>
                <td class="qtyid">{{ this.qty9 }}</td>
            </tr> 
            <tr>
                <td colspan="2"><button class="btn-primary btn-lg" id="done">Done</button></td>
                <!--<td><a href="javascript:void(null);" id="hideit">Close</a></td>-->
            </tr>
        </table>
        </div>
    <script>
        $(function(){
        
            if (localStorage) { 
                if (localStorage.getItem('visited1')) { 
                    $("#myid0").hide(); 
                }
            } else { 
                $('div').show();
            }

            $("#myid0").click(function(){
                $(this).hide();
                localStorage.setItem('visited1', true); 
                return false;
            });
        });
